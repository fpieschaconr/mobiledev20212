<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal" >
    <TextView android:id="@+id/idTVRoom" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:text="RoomID"
        android:gravity="center_horizontal" android:layout_marginTop="20dp"
        android:textSize="20sp" />
    <com.example.reto3.BoardView
        android:id="@+id/board"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"/>
    <TextView android:id="@+id/information" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:text="info"
        android:gravity="center_horizontal" android:layout_marginTop="20dp"
        android:textSize="20sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:textAllCaps="false"
        android:id="@+id/idBtnReset"
        android:layout_marginTop="30dp"
        />

</LinearLayout>