<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" >
    <com.example.reto3.BoardView
        android:id="@+id/board"
        android:layout_width="270dp"
        android:layout_height="270dp"
        android:layout_marginHorizontal="20dp"/>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="left">
        <TextView
            android:id="@+id/information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="info"
            android:textSize="20dp" />
        <TextView android:id="@+id/won" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="won"
            android:layout_below="@+id/information"
            android:textSize="20dp"/>
        <TextView android:id="@+id/tied" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="tied"
            android:layout_below="@+id/won"
            android:textSize="20dp"/>
        <TextView android:id="@+id/lost" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="lost"
            android:layout_below="@+id/tied"
            android:textSize="20dp"/>
    </RelativeLayout>
</LinearLayout>